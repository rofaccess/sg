= form_for @componente, html: {class: 'form-horizontal'}, remote: true  do |f|
  bootton.close.close-add-form [type="button" aria-hidden="true"] &times;
  h3 Agregar Componentes

  .row
    .col-md-12
      p
      = FormBuilder::text_field(f, :nombre, nil, nil, 'validate[required]')
      = FormBuilder::text_field(f, :costo, nil, nil, 'validate[required]')
      = FormBuilder::collection_select(f, :marca_id, Marca.all, :id, :nombre, '',nil, 'col-md-8 with-btn', '', nil, false, [true, nueva_marca_componentes_path])
      = FormBuilder::collection_select(f, :componente_categoria_id, ComponenteCategoria.all, :id, :nombre, '', nil, 'col-md-8 with-btn', '', nil, false, [true, nueva_categoria_componentes_path])

      button.btn.btn-default.close-add-form [type="button"] Cancelar
      = f.submit 'Guardar', class: 'btn btn-primary'

      javascript:
            $('#componente_componente_categoria_id').select2({
                placeholder: 'Seleccione una categoria...',
                formatNoMatches: function(){
                    return 'No se encontraron resultados...';
                }});

            $('#componente_marca_id').select2({
                placeholder: 'Seleccione una marca...',
                formatNoMatches: function(){
                    return 'No se encontraron resultados...';
                }});
